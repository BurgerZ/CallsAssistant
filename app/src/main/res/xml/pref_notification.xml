<PreferenceScreen xmlns:android="http://schemas.android.com/apk/res/android">

    <PreferenceCategory
        android:title="@string/pref_category_style">

        <EditTextPreference android:key="normal_size"
            android:defaultValue="@string/pref_default_normal_size"
            android:inputType="number"
            android:maxLines="1"
            android:selectAllOnFocus="true"
            android:singleLine="true"
            android:title="@string/pref_title_normal_size" />

        <EditTextPreference android:key="noty_width"
            android:defaultValue="@string/pref_default_noty_width"
            android:inputType="number"
            android:maxLines="1"
            android:selectAllOnFocus="true"
            android:singleLine="true"
            android:title="@string/pref_title_noty_width" />

    </PreferenceCategory>

</PreferenceScreen>
